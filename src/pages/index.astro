---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Simon Rost | Software Developer">
  <section class="hero">
    <div class="container">
      <div class="business-card">
        <div class="card-content fade-in" data-delay="0.1">
          <h1>Simon Rost</h1>
          <p class="tagline">Software Developer</p>
          <p class="brief-intro">
            Former NGO Management Professional transitioning to Tech. 
            Passionate about creating meaningful digital experiences.
          </p>
          <div class="cta-buttons">
            <a href="/about" class="btn">About Me</a>
            <a href="/projects" class="btn btn-outline">View Projects</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--spacing-md);
  }
  
  .business-card {
    max-width: 500px;
    margin: 0 auto;
    padding: var(--spacing-xl);
    background-color: var(--color-card);
    border-radius: 8px;
    box-shadow: 0 10px 30px var(--color-card-shadow);
    position: relative;
    overflow: hidden;
  }
  
  .business-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
  }
  
  .card-content {
    text-align: center;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-xs);
  }
  
  .tagline {
    font-size: 1.25rem;
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    font-weight: 500;
  }
  
  .brief-intro {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }
  
  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
  }
  
  @media (max-width: 768px) {
    .business-card {
      padding: var(--spacing-lg);
    }
    
    h1 {
      font-size: 2rem;
    }
    
    .cta-buttons {
      flex-direction: column;
      gap: var(--spacing-sm);
    }
  }
</style>